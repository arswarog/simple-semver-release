{
  "name": "simple-semver-release",
  "version": "0.1.0",
  "description": "",
  "main": "src/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/arswarog/test.git"
  },
  "bin": {
    "simple-semver-release": "src/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "reinstal": "sudo npm un -g . && sudo npm i -g .",
    "test": "echo \"Tests ok\"",
    "version": "conventional-changelog -i CHANGELOG.md -s",
    "commit": "git-cz",
    "prestart": "npm run build",
    "start": "node build/cli.js -vv",
    "cli": "node build/cli.js -h"
  },
  "author": "arswarog@yandex.ru",
  "license": "ISC",
  "dependencies": {
    "conventional-changelog": "^3.1.21",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/conventional-changelog-writer": "^4.0.0",
    "@types/semver": "^7.3.1",
    "@types/yargs": "^15.0.5",
    "commitizen": "^4.1.2",
    "commitlint": "^9.1.0",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "3.2.0",
    "husky": "^4.2.5",
    "semver": "^7.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "-commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}